<%- include('../layouts/user-header') %>

<div class="container mt-5">
    <div class="tab-header mt-5">
        <ul class="nav nav-tabs" id="myTab" role="tablist mt-5">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="nav-tab-one" data-bs-toggle="tab" data-bs-target="#tab-one"
                    type="button" role="tab" aria-controls="tab-one" aria-selected="true">Products</button>
            </li>
        </ul>
        <a href="#" class="view-more d-none d-md-flex">View More<i class="fi-rs-angle-double-small-right"></i></a>
    </div>
</div>

<div class="container mt-5">
    <div class="tab-content wow fadeIn animated" id="myTabContent">
        <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">

            <div class="row product-grid-4">
                <% response.forEach(element => { %>
                <div class="col-lg-3 col-md-3 col-12 col-sm-6 mb-3">
                    <div class="product-cart-wrap">
                        <div class="product-img-action-wrap">
                            <div class="product-img product-img-zoom" style="height: 5cm;">
                                <a href="/ProductDetails/<%= element._id %>">
                                    <img class="default-img" src="/images/<%= element.image[0] %>" alt="">
                                    <img class="hover-img" src="#" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="product-content-wrap" style="height: 5cm;">
                            <div class="product-category">
                                <a href=""><%= element.title %></a>
                                <h2><a href="#"><%= element.category %></a></h2>
                            </div>
                            <h4><a href="#"><%= element.description %></a></h4>
                            <div class="rating-result" title="90%">
                                <span><span>86%</span></span>
                            </div>
                            <% let currentdate=new Date() %>
                            <% let expiry=new Date(element.offerExpire) %>
                            <% console.log('frontent'); %>
                            <% console.log(currentdate); %>
                            <% console.log(element.offerExpire); %>
                            <% console.log(expiry); %>
                            <% if (element.offerExpire) { %>
                            <% if (currentdate < expiry) { %>
                            <div class="product-price">
                                <span style="color: green;">Offer-Price <%= element.offerprice %></span>
                                <span class="old-price"><h5>Orginal Price <%= element.price %></h5></span>
                            </div>
                            <div class="product-action-1 show">
                                <a aria-label="Add To Cart" class="action-btn hover-up"
                                    href="/addToCart/<%= element._id %>"><i class="fi-rs-shopping-bag-add"></i></a>
                            </div>
                            <% } else { %>
                            <% console.log('invalid date case') %>
                            <div class="product-price">
                                <span style="color: green;"><%= element.price %></span>
                            </div>
                            <% } %>
                            <% } else { %>
                            <% console.log('feild is not existing'); %>
                            <div class="product-price">
                                <span style="color: green;"><%= element.price %></span>
                            </div>
                            <% } %>
                            <div class="product-action-1 show">
                                <a aria-label="Add To Cart" class="action-btn hover-up"
                                    href="/addToCart/<%= element._id %>"><i class="fi-rs-shopping-bag-add"></i></a>
                            </div>
                            <a href="/addWishList/<%= element._id %>" aria-label="Add To Wishlist"
                                class="action-btn hover-up" id="wishbtn"><i class="fi-rs-heart"></i></a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/user-footer') %>
