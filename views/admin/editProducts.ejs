<%-include('../layouts/admin-header')%>
    <section class="content-main">
        <form action="/admin/updateProduct/<%=data._id%>" method="post" enctype="multipart/form-data">
            <!-- enctype="multipart/form-data" -->
            
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Product%></h2>
                        <div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">

                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product title</label>

                                <input type="text" placeholder="Title" value="<%= data.title%>" class="form-control" name="title">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <input type="text" placeholder="Description" value="<%= data.description%>" class="form-control" name="description">

                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Price</label>
                                        <div class="row gx-2">
                                            <input placeholder="â‚¹" type="number" value="<%= data.price %>" name="price" class="form-control">
                                        </div>
                                        <br>
                                        <label class="form-label">Quantity</label>
                                        <div class="row gx-2">
                                            <input placeholder="" type="number" value="<%= data.quantity%>" name="quantity" class="form-control">
                                        </div>
                                        <br>
                                        <label class="form-label">Category</label>

                                        <select class="form-select" name="category">
                                            <%result.forEach(element=>{%>
                                            <option value="<%= element.name %>"><%= element.name %></option>
                                            <%})%>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                </div>
                            </div>
                            <!-- <button type="submit" class="btn btn-md rounded font-sm hover-up">Add</button> -->
                        </div>
                    </div> <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/images/<%=data.image[0] %>" style="height:3cm;" id="img1" alt="img">
                                <!-- <input class="form-control" name="image1" type="file" multiple> -->
                                <!-- <input class="form-control" name="images" id="1" type="file" multiple>
                                <input type="text" name="img1" id="img1" value="0" style="display: none;"> -->
                            </div>
                        </div>
                    </div> <!-- card end// -->

                    <!-- card end// -->

                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/images/<%= data.image[1] %>" style="height:3cm;" width="500px"  alt="img" id="img2">
                                <!-- <input class="form-control" onchange="function5(event)"  name="images" type="file" multiple required> -->
                                <!-- <input class="form-control" name="images" id="2" type="file"  >
                                <input type="text" name="img2" id="img2" value="0" style="display: none;"> -->

                            </div>
                        </div>
                    </div>
                    <input class="form-control" onchange="function5(event)" name="images"  value="<%= data.image[0] %>" type="file" multiple >

                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/images/<%= data.image[2] %>" style="height:3cm;" id="img3" alt="img">
                                <!-- <input class="form-control" name="image3" type="file" multiple> -->
                                <!-- <input class="form-control" name="images" id="3" type="file" >
                                <input type="text" name="img3" id="img3" value="0" style="display: none;"> -->
                            </div>
                        </div>
                    </div> <!-- card end// -->

                    <!-- card end// -->

                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/images/<%= data.image[3] %>"  style="height:3cm;" id="img4" alt="img">
                                <!-- <input class="form-control" name="image4" type="file" multiple> -->
                                <!-- <input class="form-control" name="images" id="4" type="file" >
                                <input type="text" name="img4" id="img4" value="0" style="display: none;"> -->

                            </div>
                        </div>
                    </div>



                </div>



            </div>
            <button type="submit" class="btn btn-md rounded font-sm hover-up">Add</button>
        </form>

    </section>
